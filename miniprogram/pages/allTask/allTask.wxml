<!--pages/allTask/allTask.wxml-->
<!-- 任务栏 -->
<view wx:if="!{{allfinish}}" class="unfinishtitle">
  <view class='unfinishtitletext'>未完成</view>
</view>

<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_example weui-cell_active"
     wx:for='{{unfinish}}' wx:key='index'>
        <view class="weui-cell__hd">
            <image src="../../image/unfinished.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
        <view class="weui-cell__ft">{{item.time}}</view>
    </view>
</view>

<view wx:if="!{{allunfinish}}" class="finishtitle">
  <view class='finishtitletext'>已完成</view>
</view>

<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_example weui-cell_active" 
    wx:for='{{finish}}' wx:key='index'>
        <view class="weui-cell__hd">
            <image src="../../image/finished.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd" style="color:#c9c9c9">{{item.name}}</view>
        <view class="weui-cell__ft" style="color:#c9c9c9">{{itme.time}}</view>
    </view>
</view>